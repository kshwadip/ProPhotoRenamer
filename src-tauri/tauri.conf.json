{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pro Photographer Renamer",
  "version": "1.0.0",
  "identifier": "com.prorenamer.photorename",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pro Photographer Renamer",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Kshwadip",
    "copyright": "© 2025 Pro Photographer Renamer",
    "category": "Photography",
    "shortDescription": "Professional photo renaming with EXIF",
    "longDescription": "Rename your photos using EXIF metadata — fast, free, and offline.",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  }
}